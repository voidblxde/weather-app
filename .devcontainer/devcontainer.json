{
  "name": "Weather CLI Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/java:1-21",
  "workspaceFolder": "/workspaces/weather-app",
  "features": {
    "ghcr.io/devcontainers-extra/features/maven-sdkman:2": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.encoding": "utf8"
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven",
        "redhat.java"
      ]
    }
  },
  "postCreateCommand": "echo '✅ Java + Maven готовы. Команда запуска: cd cli && mvn compile exec:java \"-Dexec.mainClass=Main\"'"
}
