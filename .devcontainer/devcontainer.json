{
  "name": "Weather CLI Dev Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/weather-app",
  "customizations": {
    "vscode": {
      "settings": {
        "files.encoding": "utf8"
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven",
        "redhat.java"
      ]
    }
  },
  "postCreateCommand": "echo '✅ Среда готова. Запустите: cd cli && mvn compile exec:java \"-Dexec.mainClass=Main\"'"
}
